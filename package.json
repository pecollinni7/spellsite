{
  "name": "spellsite",
  "version": "1.7.40",
  "description": "Electron SpellSite application",
  "main": "main.js",
  "build": {
    "appId": "com.github.pecollinni7.spellsite",
    "publish": [
      {
        "provider": "github",
        "owner": "pecollinni7",
        "repo": "spellsite"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "identity": null
    }
  },
  "scripts": {
    "start": "electron .",
    "releasepatch": "npm version patch && electron-builder -p always",
    "releaseminor": "npm version minor && electron-builder -p always",
    "releasemajor": "npm version major && electron-builder -p always",
    "dist": "electron-builder",
    "build": "electron-builder --windows",
    "postinstall": "electron-builder install-app-deps",
    "publish": "npm run build && electron-builder --publish=always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pecollinni7/spellsite.git"
  },
  "keywords": [
    "electron",
    "example",
    "autoUpdater",
    "update",
    "github"
  ],
  "author": "Petar Jevtic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pecollinni7/spellsite/issues"
  },
  "homepage": "https://github.com/pecollinni7/spellsite#readme",
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.4.2",
    "auto-updater": "^1.0.2",
    "bootstrap-input-spinner": "^1.16.8",
    "clipboardy": "^2.3.0",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^4.3.0",
    "electron-settings": "^3.2.0",
    "electron-updater": "^4.3.5",
    "file-type": "^14.1.3",
    "image-size": "^0.9.3",
    "jquery": "^3.5.0",
    "markdown-parser": "0.0.8",
    "mdparser": "^0.0.3",
    "move-file": "^2.0.0",
    "muuri": "^0.8.0",
    "needle": "^2.3.2",
    "parse-md": "^2.0.4",
    "slash": "^3.0.0"
  },
  "devDependencies": {
    "@electron-forge/publisher-github": "^7.8.0",
    "electron": "^11.4.7",
    "electron-builder": "^22.11.5",
    "electron-rebuild": "^2.3.5"
  }
}
